  {{ service.serviceName|lower }}:
    class: {{ service.className }}
{% if service.arguments|length > 0 %}
    arguments:
{% for argument in service.arguments %}
      - "{{ argument }}"
{% endfor %}
{% endif %}
{% if service.tags|length > 0 %}
    tags:
{% for tag in service.tags %}
      - { {% for key, value in tag -%}{{ key }}: {{ value }}{% if not loop.last %}, {% endif %}{% endfor %} }
{% endfor %}
{% endif %}
